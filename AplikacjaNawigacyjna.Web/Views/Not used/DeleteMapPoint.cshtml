@model MapPointDto

<form asp-action="DeleteMapPoint">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Usuń punkt</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nazwa</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Szerokosć geograficzna</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Latitude" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Długość geograficzna</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Longitude" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Powrót do mapy</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Usuń" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>
