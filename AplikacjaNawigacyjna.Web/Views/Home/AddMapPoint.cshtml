@model MapPointDto

<form asp-action="AddMapPoint">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Dodaj punkt</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Nazwa</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Szerokość geograficzna</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" disabled class="form-control"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Długość geograficzna</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" disabled class="form-control"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-action="Index" class="btn-primary btn form-control ">Powrót do mapy</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


